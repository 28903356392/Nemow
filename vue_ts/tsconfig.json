{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* JSX */
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    //! 解决import.meta.env引用报错.env不存在
    "types": ["vite/client"],

    //path
    "baseUrl": ".",
    "paths": {
      // @ 路径配置
      "@/*": ["src/*"]
    }
  },
  /**创建element-puls.d.ts引入可识别弹窗等*/
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "auto-imports.d.ts", "element-puls.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
