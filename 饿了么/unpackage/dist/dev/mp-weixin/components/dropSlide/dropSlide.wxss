.silde_sticky {
  padding: 20rpx 0;
  background-color: #F6F6F6 !important;
}
.silde_index {
  margin: 10rpx 0;
  display: flex;
  justify-content: center;
}
.silde_index .silde_ase {
  flex: 1;
  color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.silde_nav {
  display: flex;
  color: #000000;
  justify-content: space-between;
}
.silde_nav > view {
  padding: 20rpx 20rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.silde_content {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 15rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.silde_content > image {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
}
.silde_content > view {
  flex: 1;
}
.silde_content > view > view:nth-of-type(n+2) {
  padding-top: 10rpx;
}
.silde_content .silde_content_header {
  display: flex;
}
.silde_content .silde_content_header > text:nth-of-type(1) {
  background-color: #F87045;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 20rpx;
  padding: 0 5rpx;
  margin: 7rpx 0;
}
.silde_content .silde_content_header > text:nth-of-type(2) {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 10rpx;
}
.silde_content .silde_content_2 {
  display: flex;
  justify-content: space-between;
}
.silde_content .silde_content_2 .silde_content_2_1 {
  display: flex;
}
.silde_content .silde_content_2 .silde_content_2_1 text:nth-of-type(1) {
  font-size: 28rpx;
  color: #E06F1E;
  margin-right: 20rpx;
}
.silde_content .silde_content_3 {
  display: flex;
}
.silde_content .silde_content_3 .silde_content_3_2 {
  margin-left: 20rpx;
}
.silde_content .silde_content_3 .silde_content_3_2 > text:nth-of-type(1) {
  color: #E06F1E;
}
.silde_content .silde_content_3 .silde_content_3_2 > text:nth-of-type(2) {
  font-size: 16rpx;
  margin-left: 5rpx;
  color: #B1B1B2;
  -webkit-text-decoration: line-through #B1B1B2;
          text-decoration: line-through #B1B1B2;
}
.silde_content .silde_content_4 > text {
  color: #BE752F;
  background-color: #FFEFE2;
  padding: 5rpx;
  border-radius: 5rpx;
}
.silde_content .silde_content_5 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.silde_content .silde_content_5 .silde_content_5_1 {
  display: flex;
}
.silde_content .silde_content_5 .silde_content_5_1 > view {
  padding: 0 5rpx;
  color: #E6553D;
  border: 1rpx solid #E6553D;
  border-radius: 6rpx;
}
